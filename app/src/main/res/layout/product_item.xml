<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="100dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/book"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/book_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/book_item_bg_stroke"
            android:clickable="true"
            android:focusable="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="128dp"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:id="@+id/book_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/book_title"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/author_name"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/book_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorDarkRed"
                android:text="@string/price"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/book_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/num_reviews"
                android:textSize="12sp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="123dp"
            android:layout_height="95dp"
            android:layout_gravity="start"
            android:id="@+id/book_picture"
            android:contentDescription="@string/book_title"
            app:srcCompat="@drawable/baseline_book_24"
            tools:src="@drawable/baseline_book_24"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"/>

    </android.support.constraint.ConstraintLayout>
</LinearLayout>