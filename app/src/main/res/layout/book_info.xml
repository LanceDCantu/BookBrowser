<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BookInfo">
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="4dp"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="parent">
        <android.support.constraint.ConstraintLayout
                android:id="@+id/book_1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="128dp"
                    app:layout_constraintStart_toStartOf="parent" android:id="@+id/linearLayout"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView2"
                    app:layout_constraintEnd_toStartOf="@+id/addButton" android:layout_marginEnd="43dp"
            >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/book_title"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/author_name"
                        android:textSize="12sp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price"
                        android:textSize="18sp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reviews"
                        android:textSize="12sp"/>


            </LinearLayout>
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="95dp"
                    android:layout_gravity="start"
                    android:contentDescription="@string/book_title"
                    app:srcCompat="@drawable/baseline_book_24"
                    tools:src="@drawable/baseline_book_24"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="4dp" android:id="@+id/imageView2"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/linearLayout"
                    android:layout_marginEnd="5dp"/>
            <Button
                    android:text="Add Item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/addButton"
                    app:layout_constraintStart_toEndOf="@+id/linearLayout" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="35dp"/>
        </android.support.constraint.ConstraintLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_us_text"
                android:textSize="18sp"
                android:textStyle="bold"/>
    </LinearLayout>
    <Button
            android:text="Add a Review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addReview"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="37dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"/>
    <Button
            android:text="See Reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkReviews"
            android:layout_marginTop="37dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>