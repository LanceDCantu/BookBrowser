<?xml version="1.0" encoding="UTF-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:algolia="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:launchMode="singleTop"
        android:orientation="vertical"
        android:clickable="true"
        tools:context=".MarketSearch.MarketSearchActivity">

    <com.algolia.instantsearch.ui.views.SearchBox
            android:id="@+id/marketSearchBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:iconifiedByDefault="false"
            android:queryHint="Search"
            algolia:submitButtonEnabled="false" />

    <Button
            android:id="@+id/market_quick_launch_book_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/marketSearchBox"
            app:layout_constraintBottom_toTopOf="@id/market_hits"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    <com.algolia.instantsearch.ui.views.Hits
            android:id="@+id/market_hits"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/market_quick_launch_book_button"
            app:layout_constraintBottom_toTopOf="@id/navigation_market_search"
            android:clickable="true"
            algolia:itemLayout="@layout/product_item_market"
            algolia:autoHideKeyboard="true"
            android:focusable="true">
    </com.algolia.instantsearch.ui.views.Hits>

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation_market_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/navigation"/>

</android.support.constraint.ConstraintLayout>