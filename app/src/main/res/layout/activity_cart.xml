<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
            layout="@layout/content_cart"
            android:layout_width="match_parent"
            android:layout_height="512dp"
            android:layout_weight="2"
            app:layout_constraintBottom_toTopOf="@+id/break_guideline"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"/>

    <!-- GOOD LESSON HERE: both of these layouts (included above and linear below have 0dp height,
    but with the layout_weight attribute, I've decided the percentage of the screen that they fill up,
    if they are equal it's shared 50/50 in this case the are 80/20 since I wanted content to be bigger-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:id="@+id/cart_separation_line"
        android:background="@color/colorGray"
    />

    <android.support.constraint.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/break_guideline"
        app:layout_constraintGuide_percent=".70"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toBottomOf="@+id/break_guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="left">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/subtotal"
                    android:textSize="22sp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="@string/fees"
                    android:textSize="22sp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="@string/tax"
                    android:textSize="22sp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total"
                    android:textSize="26sp"
                    android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="end">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="6dp"
                    android:text="@string/subtotal_value"
                    android:textSize="22sp"
                    android:gravity="right" android:layout_gravity="right"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="@string/fees_value"
                    android:textSize="22sp"
                    android:gravity="right" android:layout_gravity="right"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="@string/tax_value"
                    android:textSize="22sp"
                    android:gravity="right" android:layout_gravity="right"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_value"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:gravity="right" android:layout_gravity="right"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>