<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:orientation="vertical"
        tools:context=".MyOffers.AddOffer">

    <TextView
            android:id="@+id/isbn_text_input"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="24sp"
            android:textAlignment="center"
            android:text="Enter the information below and we'll take care of the rest!"/>

    <TextView
            android:id="@+id/isbn_label"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:textSize="10sp"
            android:text="ISBN"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/asking_price_label"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:textSize="10sp"
            android:text="Price"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/notes_label"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            android:textSize="16sp"
            android:text="Notes"/>
    <EditText
            android:background="@drawable/textbox_background"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="top"
            android:gravity="top"/>

    <Button
            android:id="@+id/add_offer_button"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/rounded_button_grey"
            android:textColor="#393939"
            android:textSize="18sp"
            android:text="Add Offer"
            android:textAllCaps="false"
            style="@style/Widget.AppCompat.Button.Borderless"/>

</LinearLayout>